<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Corps et conscience by Marjorie Denis{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="icon" href="asset/img/yin-yang.png">
    <link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('build/vendor.css') }}">
    <script src="{{ asset('build/vendor.js') }}" defer></script>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
<body style="background-image: url('asset/img/paysage_cheveux_retouche.JPG');
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    height: 100vh;">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid d-flex justify-content-between" id="navBar">
            <img src="asset/img/logo_cc_transparent_darker.png" alt="Logo" height="150px">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link fs-3" href="{{ path('app_home') }}"><strong>Accueil</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-3" href="{{ path('app_my_practices') }}"><strong>Mes pratiques</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-3" href="{{ path('app_who_am_i') }}"><strong>Qui suis-je ?</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-3" href="{{ path('app_testimonials') }}" alt="lien vers les témoignages"><strong>Témoignages</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-3" href=""><strong>Contact</strong></a>
                </li>
            </ul>
        </div>
    </div>
</nav>
    <main>
        {% block main %}{% endblock %}
    </main>
</body>
</html>
